<Window x:Class="Wpf_project_log.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Wpf_project_log.ViewModels"
        Title="Log Viewer"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <!--Table for data -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Input + Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox Width="300"
                     Margin="0 0 10 0"
                     VerticalAlignment="Center"
                     Text="{Binding FilterKeyword, UpdateSourceTrigger=PropertyChanged}" 
                     ToolTip="Enter keyword to filter"/>

            <Button Content="Filtrer"
                    Command="{Binding FilterCommand}"
                    Width="80"
                    Margin="0 0 10 0"
                    VerticalAlignment="Center"/>

            <Button Content="Exporter"
                    Command="{Binding ExportCommand}"
                    Width="100"
                    VerticalAlignment="Center"/>

            <Button Content="Importer CSV"
                Command="{Binding ImportCommand}"
                Width="100"
                VerticalAlignment="Center"
                Margin="0 0 10 0"/>
        </StackPanel>

        <!-- DataGrid to show logs -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding FilteredLogs}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding TimeStamp}" Width="150"/>
                <DataGridTextColumn Header="Message" Binding="{Binding EventMessage}" Width="*"/>
                <DataGridTextColumn Header="CallStack" Binding="{Binding CallStack}" Width="*"/>
                <DataGridTextColumn Header="ErrorCallStack" Binding="{Binding ErrorCallStack}" Width="*"/>
                <DataGridTextColumn Header="Task" Binding="{Binding TaskName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>